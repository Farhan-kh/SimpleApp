<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Application theme -->
    <style name="AppTheme" parent="AppBaseTheme" />

    <style name="CustomAppTheme" parent="android:Theme.Black.NoTitleBar.Fullscreen" />

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem" />

    <style name="mapView" parent="@android:style/Theme.Black" />

    <!-- Progress dialog theme -->
    <style name="ProgressHUD" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Popup menu theme -->
    <style name="PopupMenuTheme" parent="AppBaseTheme">
        <item name="android:typeface">serif</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <!-- Error dialog theme -->
    <style name="errorDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">#FF0000</item>
    </style>
</resources>
