<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false"><shape android:shape="rectangle">
            <stroke android:width="0dp" android:color="#FFcccccc" />

            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />

            <gradient android:angle="90" android:centerColor="@color/todo_seperator_color" android:endColor="@color/todo_seperator_color" android:startColor="@color/todo_seperator_color" />

            <corners android:radius="5dp" />
        </shape></item>
    <item android:state_pressed="true"><shape android:shape="rectangle">
            <stroke android:width="0dp" android:color="#FFcccccc" />

            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />

            <gradient android:angle="90" android:centerColor="@color/todo_seperator_color" android:endColor="@color/todo_seperator_color" android:startColor="@color/todo_seperator_color" />

            <corners android:radius="5dp" />
        </shape></item>

</selector>