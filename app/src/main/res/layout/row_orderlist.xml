<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/customlayoutfororderlist"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/new_control_height"
    android:layout_centerVertical="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    tools:context="com.fbapicking.controller.activity.PickingOrderListActivity">

    <TextView
        android:id="@+id/lblOrderNo"
        android:layout_width="0dp"
        android:layout_height="@dimen/control_height"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_weight=".50"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size_medium" />

    <TextView
        android:id="@+id/lblSeller"
        android:layout_width="0dp"
        android:layout_height="@dimen/control_height"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_weight=".50"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size_medium" />

</LinearLayout>